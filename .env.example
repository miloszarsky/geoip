# MaxMind GeoIP Update Configuration
# Get your free license key at: https://www.maxmind.com/en/geolite2/signup

# Your MaxMind Account ID (found in your MaxMind account dashboard)
GEOIPUPDATE_ACCOUNT_ID=YOUR_ACCOUNT_ID_HERE

# Your MaxMind License Key (generate one in your account settings)
GEOIPUPDATE_LICENSE_KEY=YOUR_LICENSE_KEY_HERE

# Database editions to download (space-separated)
# Available: GeoLite2-ASN GeoLite2-City GeoLite2-Country
GEOIPUPDATE_EDITION_IDS=GeoLite2-ASN GeoLite2-City GeoLite2-Country

# Update frequency in hours (0 = run once and exit)
# Recommended: 24 (databases are updated weekly by MaxMind)
GEOIPUPDATE_FREQUENCY=24

# API Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# WebUI Configuration
WEBUI_PORT=80
